                                    <TextBlock Margin="15,0,0,0">
                                <Run Text="Ф.И.О: "></Run>
                                <Run Text="{Binding FullName}"></Run>
                                <LineBreak></LineBreak>
                                <Run Text="Дата рождения: "></Run>
                                <Run Text="{Binding Birthday}"></Run>
                                <LineBreak></LineBreak>
                                <Run Text="Адресс: "></Run>
                                <Run Text="{Binding Adress}"></Run>
                                <LineBreak></LineBreak>
                                <Run Text="Телефон:"></Run>
                                <Run Text="{Binding Phone}"></Run>
